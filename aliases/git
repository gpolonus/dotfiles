
alias gpod="git fetch && git pull origin develop"

# NEEDS $GIT_BRANCH_PREFIX_MAP TO BE DEFINED
gchb() {
        GIT_BRANCH_PREFIX=$(map_folder_to_value $GIT_BRANCH_PREFIX_MAP)
	git checkout "$GIT_BRANCH_PREFIX$1"
}

grchb() {
        git checkout $(git branch | grep $1)
}

alias gits="git status"
alias gl="git log --decorate"
alias gc="git checkout "

alias gpnv="git push --no-verify"

alias gcnv="git commit --no-verify -m"

alias gds="gd --staged"

unalias gclean 2>/dev/null
gclean() {
        git clean -n
        read -p "Are you sure? " -n 1 -r
        echo    # (optional) move to a new line
        if [[ $REPLY =~ ^[Yy]$ ]]
        then
                git clean -f
        fi
}

gacm() {
    git add . && git commit -m "${1}"
}


alias gnuke="git reset --hard && git clean -f"

alias grlast="git reset $(git log -2 | grep ^commit | grep -o ' .*' | tail -1)"

alias zgco='git co $(git branch | fzf)'
alias gcnvm="git commit --no-verify -m "
alias gacnvm="git add . && git commit --no-verify -m "
alias gitnp="git --no-pager"
alias gd="gitnp diff"
MAIN_BRANCH="main"
alias gpom="git fetch && git pull origin $MAIN_BRANCH"
