
alias gpod="git fetch && git pull origin develop"

# NEEDS $GIT_BRANCH_PREFIX_MAP TO BE DEFINED
declare -A GIT_BRANCH_PREFIX_MAP
git_branch_name() {
        echo $GIT_BRANCH_PREFIX_MAP[$(pwd)]$1
}

gchb() {
        git fetch
	git checkout "$(git_branch_name $1)"
}

gcrb() {
        git fetch
        git checkout origin/$GIT_DEV_BRANCH
        GIT_BRANCH_NAME=$(git_branch_name $1)
        git checkout -b $GIT_BRANCH_NAME
        git push --no-verify --set-upstream origin $GIT_BRANCH_NAME
}

grchb() {
        git checkout $(git branch | grep $1)
}

alias gits="git status"
alias gl="git log --decorate"
alias gc="git checkout "

alias gpnv="git push --no-verify"

alias gcnv="git commit --no-verify -m"

alias gds="gd --staged"

unalias gclean 2>/dev/null
gclean() {
        git clean -n
        read -p "Are you sure? " -n 1 -r
        echo    # (optional) move to a new line
        if [[ $REPLY =~ ^[Yy]$ ]]
        then
                git clean -f
        fi
}

declare -A TICKET_PREFIX_MAP
gacm() {
    $TICKET_PREFIX=$TICKET_PREFIX_MAP[$(pwd)]
    $TICKET_ID=$(git branch | grep "^\*" | grep -o "$TICKET_PREFIX\d*")
    git add . && git commit -m "$TICKET_ID: ${1}."
}


alias gnuke="git reset --hard && git clean -f"

alias grlast="git reset $(git log -2 | grep ^commit | grep -o ' .*' | tail -1)"

alias zgco='git co $(git branch | fzf)'
alias gcnvm="git commit --no-verify -m "
alias gacnvm="git add . && git commit --no-verify -m "
alias gitnp="git --no-pager"
alias gd="gitnp diff"
MAIN_BRANCH="main"
alias gpom="git fetch && git pull origin $MAIN_BRANCH"
alias gb="git branch | grep '^*'"
