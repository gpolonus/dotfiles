diffpeoni() {
	peoni
	cd ./files-private/default/migrations/provider_data/
	sort "$1_20221205.csv" > "$1_20221205_sorted.csv"
	sort "$1_20221212.csv" > "$1_20221212_sorted.csv"
	diff "$1_20221205.csv" "$1_20221212.csv" > "../../../../$1.diff"
	peoni
}
