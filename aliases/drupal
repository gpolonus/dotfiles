alias dcex="drush cex"
alias uli="drush uli"
alias bs="time blt sync && uli"

bs_no_db() {
    blt source:build:composer
    blt blt:init:settings
#     blt drupal:sync:db
    blt drupal:update
    blt source:build:frontend
    blt cohesion:update
    uli
}

alias dsfp="blt drupal:sync:private-files"

alias lxdon="lando xdebug-on"
